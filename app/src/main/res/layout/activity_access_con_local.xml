<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.st.p2018.activity.AccessConLocalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--存取信息展示区-->
        <LinearLayout
            android:id="@+id/linnerLayouttxl"
            android:layout_width="match_parent"
            android:layout_height="880px"
            android:orientation="vertical">

            <!--存放信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--存放信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10px"
                    android:background="@color/loweryellow"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/savecount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:gravity="right|center_vertical"
                        android:text="共存放0个"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--存放信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="380px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/lowerblue"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tablesave"
                        android:layout_width="match_parent"
                        android:layout_height="370px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <!--取出信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--取出信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:background="@color/lowergreen"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/outcount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:gravity="right|center_vertical"
                        android:text="共取出0个"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--取出信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="380px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/lowerblue"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tableout"
                        android:layout_width="match_parent"
                        android:layout_height="370px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <!--确认取消按钮展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnclose"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center"
                android:background="@color/blue"
                android:textColor="@color/colorWhite"
                android:text="关闭"
                android:layout_marginRight="2px"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
