<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.st.p2018.activity.AccessConActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--患者信息展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10px"
            android:background="@color/lowergray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="患者:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btngg"
                android:layout_width="80px"
                android:layout_height="match_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:text="更改"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </LinearLayout>
        <!--存取信息展示区-->
        <LinearLayout
            android:id="@+id/linnerLayouttxl"
            android:layout_width="match_parent"
            android:layout_height="824px"
            android:orientation="vertical"
            android:visibility="gone">

            <!--存放信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--存放信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10px"
                    android:background="@color/loweryellow"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/savecount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="共存放0个"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--存放信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="362px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/lowerblue"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tablesave"
                        android:layout_width="match_parent"
                        android:layout_height="360px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <!--取出信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--取出信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:background="@color/lowergreen"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/outcount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="共取出0个"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--取出信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="362px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/lowerblue"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tableout"
                        android:layout_width="match_parent"
                        android:layout_height="360px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--界面加载图片-->
        <LinearLayout
            android:id="@+id/loadaccesstxl"
            android:layout_width="match_parent"
            android:layout_height="824px"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="200px"
                android:layout_height="200px" />

        </LinearLayout>

        <!--正确错误按钮展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnzq"
                android:layout_width="80px"
                android:layout_height="60px"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/blue"
                android:textColor="@color/colorWhite"
                android:text="正确"
                android:layout_marginRight="2px"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnyw"
                android:layout_width="80px"
                android:layout_height="60px"
                android:background="@color/blue"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_marginLeft="2px"
                android:gravity="center"
                android:text="有误"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
